{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "scope_id",
        "scope_type",
        "allowed_behavior",
        "findings"
    ],
    "properties": {
        "scope_id": {
            "type": "string"
        },
        "scope_type": {
            "type": "string",
            "enum": [
                "GLOBAL",
                "VIRTUAL_HOST",
                "DIRECTORY",
                "LOCATION",
                "HTACCESS"
            ]
        },
        "allowed_behavior": {
            "type": "string"
        },
        "findings": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "type",
                    "severity",
                    "confidence",
                    "evidence",
                    "explanation",
                    "impact",
                    "recommendation"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "MISCONFIGURATION",
                            "RISKY_DEFAULT",
                            "EXPOSURE",
                            "INHERITANCE_CONFLICT"
                        ]
                    },
                    "severity": {
                        "type": "string",
                        "enum": [
                            "INFO",
                            "LOW",
                            "MEDIUM",
                            "HIGH",
                            "CRITICAL"
                        ]
                    },
                    "confidence": {
                        "type": "number",
                        "minimum": 0,
                        "maximum": 1
                    },
                    "evidence": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "explanation": {
                        "type": "string"
                    },
                    "impact": {
                        "type": "string"
                    },
                    "recommendation": {
                        "type": "string"
                    }
                }
            }
        }
    }
}